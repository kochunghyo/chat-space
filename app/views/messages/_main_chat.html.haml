.chat-main
  .chat-main__group-info
    .left-header
      .group-name
        test
      .group-member
        Member :
    .right-header
      .group-edit-btn
        = link_to "#", class:"edit" do
          Edit

  .chat-main__message-list
    .chat-box
      .chat-box__top
        .chat-name 
        .chat-date
      .chat-box__message


  .chat-main__message-form
    .input__box
      %input{type:"text", class:"input__box__text",placeholder:"type a message"}
      %label{class: "input__box__image"}
        = icon('fas','image')
        %input{type:"file", class:"input__box__image--file"}
    %input{type:"submit",value:"Send",class:"submit-btn"}

